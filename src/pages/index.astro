---
import Layout from '../layouts/Layout.astro';
import { getFeaturedPatterns } from '../data/patterns';
import logo from '../assets/images/ktca-logo-2026.png';
import feet1 from '../assets/images/feet1.jpg';
import glove1 from '../assets/images/glove1.jpg';
import glove2 from '../assets/images/glove2.jpg';
import glove3 from '../assets/images/glove3.jpg';
import article2 from '../assets/images/article2.png';
import article3 from '../assets/images/article3.png';
import yarnchoice from '../assets/images/yarnchoice.png';
import katicCrochet from '../assets/images/katic-crochet.jpg';

const featuredPatterns = getFeaturedPatterns();
const imageMap: Record<string, { src: string }> = { feet1, glove1, glove2, glove3 };
const base = import.meta.env.BASE_URL;
---
<Layout>
    <header class="pt-16 sm:pt-20 lg:pt-24 pb-24 sm:pb-32 lg:pb-40 px-4 sm:px-6 relative bg-paper overflow-hidden">
        <div class="max-w-4xl mx-auto text-center relative z-10">
            <div class="flex justify-center mb-6 sm:mb-8 opacity-60 text-moss-custom-800 animate-[float_4s_ease-in-out_infinite]">
                <svg width="40" height="20" viewBox="0 0 40 20" stroke="currentColor" stroke-width="1.5" fill="none" class="w-8 sm:w-10"><path d="M20 20 C20 20 12 8 0 8 M20 20 C20 20 28 8 40 8"/><circle cx="20" cy="4" r="2.5" fill="currentColor"/></svg>
            </div>
            <h1 class="h1-hero text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-stone-custom-900 mb-6 sm:mb-8 leading-tight">Where knitting <br> becomes care</h1>
            <p class="text-lg sm:text-xl text-stone-custom-600 mb-8 sm:mb-12 max-w-xl mx-auto font-medium leading-relaxed px-1">Learn to knit with purpose, and help where it matters.</p>
            <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-5 items-center">
                <a href="#patterns" class="btn-primary px-8 sm:px-10 py-3.5 sm:py-4 text-base sm:text-lg font-serif italic shadow-lg w-full sm:w-auto text-center min-h-[48px] flex items-center justify-center rounded-full">Browse the Patterns</a>
                <a href="#about" class="bg-white/80 backdrop-blur border-2 border-stone-custom-300 text-stone-custom-800 px-8 sm:px-10 py-3.5 sm:py-4 rounded-full font-serif italic text-base sm:text-lg hover:border-teal-custom-900 hover:bg-teal-custom-50 transition-all shadow-sm hover:shadow-md w-full sm:w-auto text-center min-h-[48px] flex items-center justify-center font-medium">Learn more about our mission</a>
            </div>
            <div class="mt-10 sm:mt-16 flex justify-center">
                <img src={logo.src} alt="Emblem" class="w-48 sm:w-56 md:w-64 lg:w-72 max-w-full opacity-95 drop-shadow-xl animate-[float_6s_ease-in-out_infinite] mix-blend-multiply">
            </div>
        </div>
    </header>

    <section id="patterns" class="bg-paper pb-20 sm:pb-24 lg:pb-32 relative z-10 overflow-hidden">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-12">
            <div class="flex flex-col md:flex-row justify-between items-end border-b border-stone-200 pb-10 mb-16">
                <div>
                    <h2 class="font-serif text-4xl md:text-5xl text-stone-custom-900 mb-3">Featured Patterns</h2>
                    <p class="text-stone-custom-600 font-medium opacity-80">Thoughtfully designed for functionality and dignity.</p>
                </div>
                <a href={base + 'patterns/'} class="text-[10px] font-bold uppercase tracking-[0.2em] text-teal-custom-900 flex items-center gap-2 group mt-6 md:mt-0 hover:text-moss-custom-800 transition-colors">
                    View Collection <i data-lucide="arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform"></i>
                </a>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                {featuredPatterns.map((p) => {
                    const imgSrc = p.imageUrl ?? (p.imageKey && imageMap[p.imageKey] ? imageMap[p.imageKey].src : '');
                    return (
                        <a href={base + p.detailUrl.replace(/^\//, '')} class="group cursor-pointer bg-white p-5 rounded-[2.5rem] border border-stone-200 shadow-sm hover:shadow-xl transition-all card-hover flex flex-col block">
                            <div class="aspect-[10/11] rounded-[2rem] overflow-hidden mb-6 relative border border-stone-100">
                                {imgSrc && <img src={imgSrc} alt="" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">}
                                <div class="absolute inset-0 bg-moss-custom-900/0 group-hover:bg-moss-custom-900/5 transition-colors"></div>
                            </div>
                            <div class="text-center px-2 pb-2 flex flex-col flex-grow">
                                <h3 class="font-serif text-xl font-semibold text-stone-custom-900 mb-2">{p.title}</h3>
                                <p class="text-sm text-stone-custom-600 mb-6 leading-relaxed line-clamp-2 h-[2.5rem]">{p.shortDescription}</p>
                                <span class="mt-auto text-[10px] font-bold uppercase tracking-widest text-stone-custom-500 border border-stone-200 px-6 py-3 rounded-full group-hover:bg-teal-custom-900 group-hover:text-white transition-all w-full block">View Pattern</span>
                            </div>
                        </a>
                    );
                })}
            </div>
        </div>
        
        <svg class="wave-divider text-stone-custom-100 fill-current" viewBox="0 0 1440 100" preserveAspectRatio="none"><path d="M0,50 C320,130 600,0 920,50 C1240,100 1440,50 1440,50 V100 H0 V50 Z"></path></svg>
    </section>

    <section id="sensory-crochet" class="bg-teal-custom-50/80 py-16 sm:py-24 lg:py-32 relative overflow-hidden">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 sm:mb-16">
                <span class="badge-coming-soon-section inline-block mb-6">Not yet available — coming soon</span>
                <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-teal-custom-800 block mb-4">Development &amp; Sensory Tools</span>
                <h2 class="font-serif text-3xl sm:text-4xl lg:text-5xl text-stone-custom-900 mb-6">Sensory Crochet: Tools for Growth</h2>
                <p class="text-stone-custom-600 text-lg leading-relaxed font-medium max-w-3xl mx-auto">Every stitch has a purpose. This is a completely different side of the KTCA story. We are developing a library of specialized crochet patterns and video guides designed from the ground up to serve as development, communication, and sensory tools. Discover how the texture, rhythm, and focus of crochet can support mindfulness, learning, and sensory needs.</p>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8">
                <div class="text-center">
                    <div class="aspect-square rounded-2xl overflow-hidden border-2 border-white shadow-lg mb-4 bg-white">
                        <img src={katicCrochet.src} alt="Crochet in progress — hands and texture" class="w-full h-full object-cover">
                    </div>
                    <p class="text-sm font-semibold text-stone-custom-800">Texture &amp; rhythm</p>
                    <p class="text-xs text-stone-custom-600 mt-1">The feel of yarn and the motion of stitches support focus and calm.</p>
                </div>
                <div class="text-center">
                    <div class="aspect-square rounded-2xl overflow-hidden border-2 border-white shadow-lg mb-4 bg-white">
                        <img src={yarnchoice.src} alt="Yarn and materials for sensory-friendly making" class="w-full h-full object-cover">
                    </div>
                    <p class="text-sm font-semibold text-stone-custom-800">Mindful materials</p>
                    <p class="text-xs text-stone-custom-600 mt-1">Soft, chosen fibres that suit sensitive hands and sensory needs.</p>
                </div>
                <div class="text-center">
                    <div class="aspect-square rounded-2xl overflow-hidden border-2 border-white shadow-lg mb-4 bg-white">
                        <img src={glove1.src} alt="Finished piece — comfort and care" class="w-full h-full object-cover">
                    </div>
                    <p class="text-sm font-semibold text-stone-custom-800">Purpose in every stitch</p>
                    <p class="text-xs text-stone-custom-600 mt-1">From development tools to communication aids, made with intention.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="tutorials" class="bg-stone-custom-100 py-16 sm:py-24 lg:py-32 relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12">
            <div class="flex flex-col md:flex-row justify-between items-end mb-12">
                <div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-teal-custom-900 block mb-2">Video Guidance</span>
                    <h2 class="font-serif text-4xl md:text-5xl text-stone-custom-900 mb-4">Learn with Purpose</h2>
                    <a href="#" class="inline-flex items-center gap-2 text-[11px] font-bold uppercase tracking-[0.2em] text-stone-custom-600 hover:text-teal-custom-900 transition-colors border-b border-transparent hover:border-teal-custom-900 pb-0.5">
                        <span>Check out my YouTube Channel</span>
                        <i data-lucide="external-link" class="w-4 h-4"></i>
                    </a>
                </div>
                <div class="flex gap-3 mt-6 md:mt-0">
                    <button type="button" id="prevBtn" class="w-12 h-12 min-w-[48px] min-h-[48px] rounded-full border-2 border-stone-300 flex items-center justify-center hover:bg-white active:bg-stone-100 transition-all text-stone-600 bg-paper/50 touch-manipulation" aria-label="Previous"><i data-lucide="arrow-left" class="w-5 h-5"></i></button>
                    <button type="button" id="nextBtn" class="w-12 h-12 min-w-[48px] min-h-[48px] rounded-full border-2 border-stone-300 flex items-center justify-center hover:bg-white active:bg-stone-100 transition-all text-stone-600 bg-paper/50 touch-manipulation" aria-label="Next"><i data-lucide="arrow-right" class="w-5 h-5"></i></button>
                </div>
            </div>
            
            <div class="relative w-full overflow-hidden"> 
                <div id="carousel" class="flex gap-8 overflow-x-auto no-scrollbar pb-10 snap-x pr-12">
                    
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={article2.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Adaptive Knitting 101</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">The basics of creating comfortable, accessible garments for all needs.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={yarnchoice.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Softest Fibers Guide</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">Selecting appropriate materials for medically fragile and sensitive skin.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={feet1.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Creating Access Points</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">Integrating openings for tubes and monitoring wires seamlessly.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={glove1.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Seamless Finishes</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">Minimizing bulk for comfort under braces and orthotics.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={glove3.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Sensory Adjustments</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">Modifying patterns for sensory needs and reducing irritation.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={article3.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Working with Cotton</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">Best practices for using non-stretch plant fibers in adaptive wear.</p>
                    </div>
                    <div class="video-card-width snap-start group">
                        <div class="relative aspect-video bg-stone-800 rounded-[2rem] overflow-hidden shadow-lg border-[6px] border-white ring-1 ring-stone-200 card-hover">
                            <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                            <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                            <img src={glove2.src} class="w-full h-full object-cover">
                        </div>
                        <h3 class="font-serif text-xl font-bold mt-6 mb-2">Custom Measurements</h3>
                        <p class="text-sm text-stone-600 line-clamp-2">How to measure for unique limb shapes and requirements.</p>
                    </div>
                </div>
            </div>
            
            <svg class="wave-divider text-moss-custom-100 fill-current" viewBox="0 0 1440 100" preserveAspectRatio="none"><path d="M0,50 C320,130 600,0 920,50 C1240,100 1440,50 1440,50 V100 H0 V50 Z"></path></svg>
        </div>
    </section>

    <section class="bg-moss-custom-100 py-16 sm:py-24 lg:py-32 relative z-10 overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12">
            <div class="grid lg:grid-cols-2 gap-10">
                <div id="free-school" class="bg-white rounded-[3rem] p-12 border border-stone-200 shadow-soft flex flex-col justify-center text-center group cursor-default transition-all community-card">
                    <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-moss-custom-800 mb-6">Free SKOOL Community</span>
                    <h3 class="font-serif text-4xl text-stone-900 mb-6">Connecting hands <br>with hearts.</h3>
                    <p class="text-stone-600 mb-10 max-w-sm mx-auto leading-relaxed">This is your space to connect. Join our free forum to meet other crafters and to link up with people who need these knitted items—families who have someone at home who would benefit from adaptive, caring garments. Here, makers and those in need find each other.</p>
                    <div class="flex justify-center -space-x-3 mb-10">
                        <img src={feet1.src} class="w-12 h-12 rounded-full border-4 border-white object-cover shadow-sm community-avatar" alt="">
                        <img src={glove1.src} class="w-12 h-12 rounded-full border-4 border-white object-cover shadow-sm community-avatar" alt="">
                        <img src={glove2.src} class="w-12 h-12 rounded-full border-4 border-white object-cover shadow-sm community-avatar" alt="">
                        <div class="w-12 h-12 rounded-full border-4 border-white bg-moss-custom-50 text-moss-custom-800 flex items-center justify-center text-[10px] font-bold shadow-sm community-avatar">+2k</div>
                    </div>
                    <div class="text-center">
                        <a href="#" class="bg-moss-custom-800 text-white px-10 py-3.5 rounded-full font-bold uppercase text-[11px] tracking-widest shadow-lg hover:bg-moss-custom-900 transition-all inline-block hover:scale-105">Join free community</a>
                    </div>
                </div>
                <div id="member-vault" class="coaching-card rounded-[3rem] p-12 border border-teal-custom-800 shadow-2xl text-center flex flex-col items-center justify-center text-white relative overflow-hidden group hover:scale-[1.01]">
                    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 24px 24px;"></div>
                    
                    <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-teal-custom-100 mb-6 relative z-10 bg-teal-custom-900/50 px-3 py-1 rounded-full backdrop-blur-sm">Member Vault</span>
                    <h3 class="font-serif text-4xl mb-6 relative z-10">Member Vault</h3>
                    <p class="text-teal-custom-100/80 mb-10 max-w-sm mx-auto leading-relaxed relative z-10">Unlock premium videos, advanced resources, and get direct access to our bi-weekly 'Ask Me Anything' sessions to help you navigate your projects.</p>
                    
                    <div class="flex flex-col sm:flex-row gap-3 justify-center items-center relative z-10">
                        <a href="#" class="bg-white text-teal-custom-900 px-10 py-3.5 rounded-full font-bold uppercase text-[11px] tracking-widest shadow-lg hover:bg-stone-100 transition-all hover:scale-105">Join Member Vault</a>
                        <button type="button" class="member-vault-learn-more border-2 border-white/60 text-white px-8 py-3 rounded-full font-bold uppercase text-[11px] tracking-widest hover:bg-white/15 transition-all">Learn More</button>
                    </div>
                    <div class="mt-8 flex items-center gap-2 opacity-60 text-[10px] uppercase tracking-widest relative z-10">
                        <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span> Limited spots available
                    </div>
                </div>
            </div>
        </div>
        
        <svg class="wave-divider text-paper fill-current" viewBox="0 0 1440 100" preserveAspectRatio="none"><path d="M0,50 C320,130 600,0 920,50 C1240,100 1440,50 1440,50 V100 H0 V50 Z"></path></svg>
    </section>

    <section class="bg-moss-custom-800 py-16 sm:py-24 lg:py-32 relative z-10 text-white border-t border-moss-custom-900 overflow-hidden">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 text-center">
            <div class="absolute inset-0 opacity-10" style="background-image: url('data:image/svg+xml,%3Csvg width=\'20\' height=\'20\' viewBox=\'0 0 20 20\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Ccircle cx=\'2\' cy=\'2\' r=\'1\' fill=\'%23fff\'/%3E%3C/svg%3E');"></div>
            <div class="relative z-10">
                <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-teal-100/70 mb-6 block">Our Mission</span>
                <h2 class="font-serif text-3xl md:text-5xl leading-tight mb-12 font-medium">Comfort becomes complicated when <br> <span class="italic text-teal-custom-100">complex medical needs</span> arise.</h2>
                <div class="grid md:grid-cols-3 gap-8 text-left mt-16">
                    <div class="bg-moss-custom-900/40 p-8 rounded-3xl border border-white/10 backdrop-blur-sm"><h4 class="text-teal-custom-100 text-[11px] font-bold uppercase tracking-widest mb-3">Medical Friendly</h4><p class="text-stone-200 text-sm leading-relaxed opacity-90">Designs that accommodate tubes, lines, and monitors without disconnecting.</p></div>
                    <div class="bg-moss-custom-900/40 p-8 rounded-3xl border border-white/10 backdrop-blur-sm"><h4 class="text-teal-custom-100 text-[11px] font-bold uppercase tracking-widest mb-3">Orthotic Ready</h4><p class="text-stone-200 text-sm leading-relaxed opacity-90">Fits over AFOs, braces, and casts while maintaining warmth and style.</p></div>
                    <div class="bg-moss-custom-900/40 p-8 rounded-3xl border border-white/10 backdrop-blur-sm"><h4 class="text-teal-custom-100 text-[11px] font-bold uppercase tracking-widest mb-3">Sensory Soft</h4><p class="text-stone-200 text-sm leading-relaxed opacity-90">Seamless techniques and hypoallergenic fibers for fragile, sensitive skin.</p></div>
                </div>
            </div>
        </div>
        <svg class="wave-divider text-stone-custom-100 fill-current" viewBox="0 0 1440 100" preserveAspectRatio="none"><path d="M0,50 C320,130 600,0 920,50 C1240,100 1440,50 1440,50 V100 H0 V50 Z"></path></svg>
    </section>

    <section id="about" class="bg-stone-custom-100 py-16 sm:py-24 lg:py-32 relative overflow-hidden">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-12 grid lg:grid-cols-2 gap-12 lg:gap-24 items-center">
            <div class="order-2 lg:order-1">
                <div class="flex items-center gap-4 mb-8 text-teal-custom-900 font-bold uppercase tracking-widest text-[10px]">
                    <div class="h-px flex-1 bg-teal-custom-900/30"></div>The Founder's Story<div class="h-px w-12 bg-teal-custom-900/30"></div>
                </div>
                <h2 class="font-serif text-5xl md:text-6xl text-stone-custom-900 leading-[1.1] mb-10">From caring <br> to <span class="italic text-teal-custom-900">creating.</span></h2>
                <div class="space-y-8 text-lg text-stone-custom-600 leading-relaxed font-medium">

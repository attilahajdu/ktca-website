---
import Layout from '../layouts/Layout.astro';
import feet1 from '../assets/images/feet1.jpg';
import glove1 from '../assets/images/glove1.jpg';
import glove2 from '../assets/images/glove2.jpg';
import glove3 from '../assets/images/glove3.jpg';
import article2 from '../assets/images/article2.png';
import yarnchoice from '../assets/images/yarnchoice.png';
---
<Layout title="Fingerless Comfort Gloves | KTCA">
    <main class="pt-8 sm:pt-12 pb-20 sm:pb-24 px-4 sm:px-6 lg:px-12 max-w-7xl mx-auto min-h-screen">
        
        <div class="text-center mb-6 sm:mb-8">
            <div class="text-[10px] text-stone-custom-400 font-bold uppercase tracking-[0.15em] inline-block mb-6 sm:mb-8 px-2">
                <a href="/" class="hover:text-teal-custom-900">Home</a> <span class="mx-2">/</span> <a href="/patterns/" class="hover:text-teal-custom-900">Patterns</a> <span class="mx-2">/</span> <span class="text-teal-custom-900">Comfort Gloves</span>
            </div>
            
            <div class="flex justify-center w-full">
                <div class="level-toggle-container">
                    <button id="btnBeginner" type="button" class="tab-btn tab-active">Beginner</button>
                    <button id="btnAdvanced" type="button" class="tab-btn tab-inactive">Advanced</button>
                </div>
            </div>
            <p class="text-center text-stone-400 text-xs italic mt-4 px-2">Select your skill level to customize the pattern details below.</p>
        </div>

        <div id="viewBeginner" class="view-section visible-view mt-10 sm:mt-16">
            
            <div class="grid md:grid-cols-2 gap-10 sm:gap-16 mb-16 sm:mb-24 border-b border-stone-200 pb-12 sm:pb-20">
                <div class="space-y-6">
                    <div class="aspect-[4/5] rounded-[3rem] overflow-hidden border-[8px] border-white shadow-xl ring-1 ring-stone-200 relative">
                        <span class="absolute top-6 left-6 bg-white/90 backdrop-blur-sm text-teal-custom-900 text-[10px] font-bold uppercase tracking-widest px-4 py-2 rounded-full z-10 border border-teal-custom-900/10">Beginner Friendly</span>
                        <img id="galleryMainBeginner" src={glove1.src} alt="Simple Fingerless Gloves" class="w-full h-full object-cover transition-transform duration-700 hover:scale-105">
                    </div>
                    <div class="grid grid-cols-3 gap-4 pattern-gallery-thumbs" data-gallery-main="galleryMainBeginner" role="listbox" aria-label="Select image to view">
                        <img src={glove1.src} alt="View 1" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-teal-900 shadow-sm gallery-thumb-selected" role="option" tabindex="0">
                        <img src={feet1.src} alt="View 2" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-transparent hover:border-stone-300 opacity-70 hover:opacity-100 transition-all" role="option" tabindex="0">
                        <img src={glove2.src} alt="View 3" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-transparent hover:border-stone-300 opacity-70 hover:opacity-100 transition-all" role="option" tabindex="0">
                    </div>
                </div>

                <div class="flex flex-col justify-center">
                    <span class="text-teal-custom-900 font-bold uppercase tracking-[0.2em] text-[10px] mb-3">Level 1 Pattern</span>
                    <h1 class="font-serif text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-stone-custom-900 mb-4 sm:mb-6 leading-tight">Fingerless Comfort Gloves</h1>
                    <p class="text-2xl font-serif italic text-stone-500 mb-8">£8.00 <span class="text-[10px] text-stone-custom-400 font-sans not-italic font-bold tracking-widest ml-3 align-middle bg-stone-100 px-2 py-1 rounded">PDF DOWNLOAD</span></p>
                    
                    <div class="prose text-stone-custom-600 mb-10 leading-relaxed">
                        <p class="font-bold text-stone-900 mb-2">Start your adaptive knitting journey here.</p>
                        <p class="mb-6">This version focuses on the fundamentals of seamless comfort. Using a simple stockinette stitch and a forgiving ribbed cuff, you will create a highly functional glove that provides warmth without irritation.</p>
                        
                        <div class="bg-stone-custom-100 p-6 rounded-2xl border border-stone-200">
                            <h4 class="text-[10px] font-bold uppercase tracking-widest text-stone-500 mb-3">What you'll learn:</h4>
                            <ul class="space-y-2 text-sm text-stone-700">
                                <li class="flex items-start gap-3"><i data-lucide="check" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Simple seamless construction</li>
                                <li class="flex items-start gap-3"><i data-lucide="check" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Ribbed cuff for gentle expansion</li>
                                <li class="flex items-start gap-3"><i data-lucide="check" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Basic thumb gusset shaping</li>
                            </ul>
                        </div>
                    </div>

                    <button type="button" class="btn-primary w-full py-5 text-lg font-serif italic mb-6 shadow-xl hover:shadow-2xl">Buy Pattern Kit - £8</button>
                    <p class="text-center text-[10px] text-stone-400 uppercase tracking-widest mb-8">Includes both Beginner & Advanced versions</p>
                    
                    <div class="flex gap-4">
                        <button type="button" class="flex-1 btn-secondary py-3 text-[10px] font-bold uppercase tracking-widest">Join Community</button>
                        <button type="button" class="flex-1 btn-secondary py-3 text-[10px] font-bold uppercase tracking-widest">Knit 1:1</button>
                    </div>
                </div>
            </div>

            <div class="bg-stone-custom-100 rounded-[2rem] sm:rounded-[3rem] p-6 sm:p-8 md:p-16 border border-stone-custom-200">
                
                <div class="mb-12 sm:mb-16">
                    <div class="flex items-center gap-4 mb-8">
                        <span class="w-12 h-px bg-stone-300"></span>
                        <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-teal-custom-900">Video Guidance</span>
                    </div>
                    <h3 class="font-serif text-3xl sm:text-4xl text-stone-custom-900 mb-8 sm:mb-10">Step-by-Step for Beginners</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="video-card group cursor-pointer bg-white p-3 rounded-[2.5rem] border border-stone-200 shadow-sm hover:shadow-md transition-all">
                            <div class="aspect-video bg-stone-800 rounded-[2rem] overflow-hidden relative mb-4">
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                                <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                                <img src={article2.src} alt="" class="w-full h-full object-cover">
                            </div>
                            <div class="px-4 pb-4">
                                <h4 class="font-serif text-xl font-bold mb-2 text-stone-900">Casting On & Ribbing</h4>
                                <p class="text-sm text-stone-custom-500">A slow-motion guide to starting your gloves with a stretchy cuff.</p>
                            </div>
                        </div>
                        <div class="video-card group cursor-pointer bg-white p-3 rounded-[2.5rem] border border-stone-200 shadow-sm hover:shadow-md transition-all">
                            <div class="aspect-video bg-stone-800 rounded-[2rem] overflow-hidden relative mb-4">
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                                <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                                <img src={feet1.src} alt="" class="w-full h-full object-cover">
                            </div>
                            <div class="px-4 pb-4">
                                <h4 class="font-serif text-xl font-bold mb-2 text-stone-900">Basic Thumb Gusset</h4>
                                <p class="text-sm text-stone-custom-500">Simple increases to create space for the thumb.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-16">
                    <p class="text-[10px] font-bold uppercase tracking-[0.3em] text-teal-custom-900 text-center mb-8">Need extra help?</p>

                    <!-- Primary: Community (recommended, sustainable) -->
                    <div class="coaching-card rounded-[2.5rem] sm:rounded-[3rem] p-8 sm:p-10 md:p-14 border-2 border-teal-custom-800 shadow-2xl text-center text-white relative overflow-hidden group mb-6 max-w-4xl mx-auto">
                        <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 24px 24px;"></div>
                        <span class="inline-block text-[10px] font-bold uppercase tracking-[0.25em] text-teal-custom-100 mb-4 relative z-10 bg-white/15 backdrop-blur-sm px-4 py-1.5 rounded-full border border-white/20">We recommend</span>
                        <h3 class="font-serif text-3xl sm:text-4xl md:text-5xl mb-4 relative z-10">Join our community</h3>
                        <p class="text-teal-custom-100/95 mb-2 text-base sm:text-lg max-w-xl mx-auto relative z-10 leading-relaxed">£6.99 a month. Get access to a private forum where your questions are answered, plus bi-weekly AMA (Ask Me Anything) sessions where we tackle issues together.</p>
                        <p class="text-sm font-bold uppercase tracking-widest text-white/90 mb-8 relative z-10">£6.99/month · Cancel anytime</p>
                        <a href="#" class="bg-white text-teal-custom-900 px-8 py-4 rounded-full font-bold uppercase text-[11px] tracking-widest shadow-xl hover:bg-stone-100 hover:scale-[1.02] transition-all relative z-10 inline-block">Join Community</a>
                    </div>

                    <!-- Secondary: 1:1 (one-off option) -->
                    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 py-6 px-6 rounded-2xl bg-stone-custom-100/80 border border-stone-200 max-w-2xl mx-auto">
                        <p class="text-stone-custom-600 text-sm sm:text-base font-medium text-center sm:text-left">Prefer a one-off session? Book a private 30-minute 1:1 to get unstuck.</p>
                        <a href="#" class="btn-secondary text-[10px] py-2.5 px-5 shrink-0 whitespace-nowrap">Book 1:1 Help</a>
                    </div>
                </div>

                <div class="border-t border-stone-200 pt-12">
                    <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-moss-custom-800 block mb-6">Tips & Tricks</span>
                    <h3 class="font-serif text-3xl text-stone-custom-900 mb-8">Getting Started Right</h3>
                    <div class="prose text-stone-custom-600 max-w-none columns-1 md:columns-2 gap-16 leading-relaxed">
                        <p class="mb-6"><strong>Yarn Choice:</strong> For beginners, choose a yarn that is smooth and light-colored. Dark yarns make it harder to see your stitches, which can be frustrating when learning new techniques.</p>
                        <p class="mb-6"><strong>Stitch Markers:</strong> Use a distinct stitch marker to highlight the beginning of the round. This simple step prevents the most common mistake of losing your place in the pattern.</p>
                        <p><strong>Blocking:</strong> Always wash and block your swatch before starting. Adaptive wear needs to fit precisely, and yarn can grow or shrink significantly after the first wash.</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="viewAdvanced" class="view-section hidden-view mt-16">
            
            <div class="grid md:grid-cols-2 gap-16 mb-24 border-b border-stone-200 pb-20">
                <div class="space-y-6">
                    <div class="aspect-[4/5] rounded-[3rem] overflow-hidden border-[8px] border-white shadow-xl ring-1 ring-stone-200 relative">
                        <span class="absolute top-6 left-6 bg-stone-900 text-white text-[10px] font-bold uppercase tracking-widest px-4 py-2 rounded-full z-10">Level 2: Advanced</span>
                        <img id="galleryMainAdvanced" src={glove3.src} alt="Cabled Comfort Gloves" class="w-full h-full object-cover transition-transform duration-700 hover:scale-105">
                    </div>
                    <div class="grid grid-cols-3 gap-4 pattern-gallery-thumbs" data-gallery-main="galleryMainAdvanced" role="listbox" aria-label="Select image to view">
                        <img src={glove3.src} alt="View 1" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-teal-900 shadow-sm gallery-thumb-selected" role="option" tabindex="0">
                        <img src={glove2.src} alt="View 2" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-transparent hover:border-stone-300 opacity-70 hover:opacity-100 transition-all" role="option" tabindex="0">
                        <img src={yarnchoice.src} alt="View 3" class="aspect-square rounded-2xl object-cover cursor-pointer border-2 border-transparent hover:border-stone-300 opacity-70 hover:opacity-100 transition-all" role="option" tabindex="0">
                    </div>
                </div>

                <div class="flex flex-col justify-center">
                    <span class="text-stone-500 font-bold uppercase tracking-[0.2em] text-[10px] mb-3">Level 2 Pattern</span>
                    <h1 class="font-serif text-5xl md:text-6xl text-stone-custom-900 mb-6 leading-tight">Fingerless Comfort Gloves <span class="block text-3xl italic text-stone-400 mt-2 font-light">Cabled Edition</span></h1>
                    <p class="text-2xl font-serif italic text-teal-custom-900 mb-8">£8.00 <span class="text-[10px] text-stone-custom-400 font-sans not-italic font-bold tracking-widest ml-3 align-middle bg-stone-100 px-2 py-1 rounded">PDF DOWNLOAD</span></p>
                    
                    <div class="prose text-stone-custom-600 mb-10 leading-relaxed">
                        <p class="font-bold text-stone-900 mb-2">Refined techniques for complex needs.</p>
                        <p class="mb-6">This advanced version introduces intricate cabling that looks beautiful and adds structural elasticity. We also utilize tubular cast-ons and invisible finishing for a truly professional, zero-friction interior.</p>
                        
                        <div class="bg-stone-custom-100 p-6 rounded-2xl border border-stone-200">
                            <h4 class="text-[10px] font-bold uppercase tracking-widest text-stone-500 mb-3">Advanced Features:</h4>
                            <ul class="space-y-2 text-sm text-stone-700">
                                <li class="flex items-start gap-3"><i data-lucide="plus" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Complex cable charts included</li>
                                <li class="flex items-start gap-3"><i data-lucide="plus" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Invisible seam finishing techniques</li>
                                <li class="flex items-start gap-3"><i data-lucide="plus" class="w-4 h-4 text-teal-custom-900 mt-0.5 shrink-0"></i> Structural elasticity for orthotic fit</li>
                            </ul>
                        </div>
                    </div>

                    <button type="button" class="btn-primary w-full py-5 text-lg font-serif italic mb-6 shadow-xl hover:shadow-2xl">Buy Pattern Kit - £8</button>
                    <p class="text-center text-[10px] text-stone-400 uppercase tracking-widest mb-8">Includes both Beginner & Advanced versions</p>
                    
                    <div class="flex gap-4">
                        <button type="button" class="flex-1 btn-secondary py-3 text-[10px] font-bold uppercase tracking-widest">Join Community</button>
                        <button type="button" class="flex-1 btn-secondary py-3 text-[10px] font-bold uppercase tracking-widest">Knit 1:1</button>
                    </div>
                </div>
            </div>

            <div class="bg-stone-custom-100 rounded-[2rem] sm:rounded-[3rem] p-6 sm:p-8 md:p-16 border border-stone-custom-200">
                
                <div class="mb-12 sm:mb-16">
                    <div class="flex items-center gap-4 mb-8">
                        <span class="w-12 h-px bg-stone-300"></span>
                        <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-teal-custom-900">Masterclass</span>
                    </div>
                    <h3 class="font-serif text-3xl sm:text-4xl text-stone-custom-900 mb-8 sm:mb-10">Advanced Techniques</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="video-card group cursor-pointer bg-white p-3 rounded-[2.5rem] border border-stone-200 shadow-sm hover:shadow-md transition-all">
                            <div class="aspect-video bg-stone-800 rounded-[2rem] overflow-hidden relative mb-4">
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                                <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                                <img src={glove3.src} alt="" class="w-full h-full object-cover">
                            </div>
                            <div class="px-4 pb-4">
                                <h4 class="font-serif text-xl font-bold mb-2 text-stone-900">Cable Modifications</h4>
                                <p class="text-sm text-stone-custom-500">Integrating complex cables while maintaining elasticity for medical devices.</p>
                            </div>
                        </div>
                        <div class="video-card group cursor-pointer bg-white p-3 rounded-[2.5rem] border border-stone-200 shadow-sm hover:shadow-md transition-all">
                            <div class="aspect-video bg-stone-800 rounded-[2rem] overflow-hidden relative mb-4">
                                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-all z-10"></div>
                                <div class="absolute inset-0 flex items-center justify-center z-20"><div class="w-14 h-14 bg-white/95 rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform"><i data-lucide="play" class="ml-1 text-teal-custom-900 fill-teal-custom-900 w-5 h-5"></i></div></div>
                                <img src={glove2.src} alt="" class="w-full h-full object-cover">
                            </div>
                            <div class="px-4 pb-4">
                                <h4 class="font-serif text-xl font-bold mb-2 text-stone-900">Invisible Seams</h4>
                                <p class="text-sm text-stone-custom-500">Advanced finishing techniques for zero-friction interiors.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="coaching-card rounded-[2.5rem] p-10 md:p-14 border border-teal-custom-800 shadow-xl text-center text-white relative overflow-hidden group mb-16 mx-auto max-w-4xl">
                    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, #fff 1px, transparent 1px); background-size: 24px 24px;"></div>
                    <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-teal-custom-100 mb-4 relative z-10 bg-teal-custom-900/50 px-3 py-1 rounded-full backdrop-blur-sm inline-block">Complex Needs?</span>
                    <h3 class="font-serif text-3xl md:text-4xl mb-4 relative z-10">Adapting for specific medical requirements?</h3>
                    <p class="text-teal-custom-100/90 mb-8 max-w-lg mx-auto relative z-10">Book a private session to discuss how to modify this pattern for specific orthotics, PICC lines, or sensory processing disorders.</p>
                    <a href="#" class="bg-white text-teal-custom-900 px-8 py-3 rounded-full font-bold uppercase text-[10px] tracking-widest shadow-lg hover:bg-stone-100 transition-all relative z-10 inline-block">Book Expert Consult</a>
                </div>

                <div class="border-t border-stone-200 pt-12">
                    <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-moss-custom-800 block mb-6">Expert Tips</span>
                    <h3 class="font-serif text-3xl text-stone-custom-900 mb-8">Modifications for Mobility</h3>
                    <div class="prose text-stone-custom-600 max-w-none columns-1 md:columns-2 gap-16 leading-relaxed">
                        <p class="mb-6"><strong>Thumb Placement:</strong> For advanced knitters, adjusting the thumb gusset placement based on specific hand mobility issues is crucial. Consider moving the gusset 1-2 stitches forward for palmar abduction issues.</p>
                        <p class="mb-6"><strong>Float Management:</strong> When using colorwork, ensure your floats are caught every 3 stitches. Long floats can catch on fingers or medical equipment inside the glove, creating a safety hazard.</p>
                        <p><strong>Tubular Bind-offs:</strong> Experiment with tubular bind-offs for a finish that is both visually professional and extremely elastic, perfect for swollen joints or fitting over casts.</p>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <script is:inline>
        function switchView(viewName) {
            var beginnerView = document.getElementById('viewBeginner');
            var advancedView = document.getElementById('viewAdvanced');
            var btnBeginner = document.getElementById('btnBeginner');
            var btnAdvanced = document.getElementById('btnAdvanced');
            if (!beginnerView || !advancedView || !btnBeginner || !btnAdvanced) return;

            if (viewName === 'beginner') {
                advancedView.style.opacity = '0';
                advancedView.style.transform = 'translateY(10px)';
                setTimeout(function () {
                    advancedView.classList.replace('visible-view', 'hidden-view');
                    beginnerView.classList.replace('hidden-view', 'visible-view');
                    requestAnimationFrame(function () {
                        beginnerView.style.opacity = '1';
                        beginnerView.style.transform = 'translateY(0)';
                    });
                }, 400);
                btnBeginner.classList.add('tab-active');
                btnBeginner.classList.remove('tab-inactive');
                btnAdvanced.classList.remove('tab-active');
                btnAdvanced.classList.add('tab-inactive');
            } else {
                beginnerView.style.opacity = '0';
                beginnerView.style.transform = 'translateY(10px)';
                setTimeout(function () {
                    beginnerView.classList.replace('visible-view', 'hidden-view');
                    advancedView.classList.replace('hidden-view', 'visible-view');
                    requestAnimationFrame(function () {
                        advancedView.style.opacity = '1';
                        advancedView.style.transform = 'translateY(0)';
                    });
                }, 400);
                btnAdvanced.classList.add('tab-active');
                btnAdvanced.classList.remove('tab-inactive');
                btnBeginner.classList.remove('tab-active');
                btnBeginner.classList.add('tab-inactive');
            }
        }
        function initGalleries() {
            document.querySelectorAll('.pattern-gallery-thumbs').forEach(function (container) {
                var mainId = container.getAttribute('data-gallery-main');
                var mainImg = mainId ? document.getElementById(mainId) : null;
                var thumbs = container.querySelectorAll('img');
                if (!mainImg || !thumbs.length) return;
                thumbs.forEach(function (thumb) {
                    thumb.addEventListener('click', function () {
                        mainImg.src = this.src;
                        thumbs.forEach(function (t) {
                            t.classList.remove('gallery-thumb-selected');
                            t.classList.add('border-transparent', 'opacity-70');
                            t.classList.remove('border-teal-900', 'border-stone-900');
                        });
                        this.classList.add('gallery-thumb-selected');
                        this.classList.remove('border-transparent', 'opacity-70');
                        this.classList.add('border-teal-900');
                    });
                    thumb.addEventListener('keydown', function (e) {
                        if (e.key === 'Enter' || e.key === ' ') {
                            e.preventDefault();
                            this.click();
                        }
                    });
                });
            });
        }

        document.addEventListener('DOMContentLoaded', function () {
            if (typeof lucide !== 'undefined') lucide.createIcons();
            var b = document.getElementById('btnBeginner');
            var a = document.getElementById('btnAdvanced');
            if (b) b.addEventListener('click', function () { switchView('beginner'); });
            if (a) a.addEventListener('click', function () { switchView('advanced'); });
            initGalleries();
        });
    </script>
</Layout>

      var currentContext = 'general';
      var chartInstance = null;

      function renderNav() {
        var tabs = [
          { id: 'general', label: 'General Public' },
          { id: 'homecare', label: 'Home Care' },
          { id: 'hospital', label: 'Hospital & Clinical' }
        ];
        var container = document.getElementById('nav-container');
        if (!container) return;
        container.innerHTML = tabs.map(function(tab) {
          var active = currentContext === tab.id ? 'btn-active' : 'btn-outline';
          return '<button type="button" onclick="window.yarnGuideUpdateDashboard(\'' + tab.id + '\')" class="px-8 py-3 text-lg font-serif italic rounded-full transition-all shadow-md ' + active + '">' + tab.label + '</button>';
        }).join('');
      }

      function updateChart(chartData) {
        var canvas = document.getElementById('fiberRadarChart');
        if (!canvas) return;
        var ctx = canvas.getContext('2d');
        if (chartInstance) chartInstance.destroy();
        chartInstance = new Chart(ctx, {
          type: 'radar',
          data: chartData,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
              r: {
                angleLines: { color: 'rgba(0,0,0,0.05)' },
                grid: { color: 'rgba(0,0,0,0.05)' },
                pointLabels: {
                  font: { size: 11, family: "'Lato', sans-serif", weight: '600' },
                  color: '#57534e'
                },
                suggestedMin: 0,
                suggestedMax: 10,
                ticks: { display: false }
              }
            },
            plugins: {
              legend: { position: 'bottom', labels: { font: { family: "'Lato', sans-serif" }, usePointStyle: true } }
            }
          }
        });
      }

      function renderProjects(projects) {
        var grid = document.getElementById('project-grid');
        if (!grid) return;
        grid.innerHTML = projects.map(function(p) {
          return '<div role="button" tabindex="0" onclick="window.yarnGuideShowDetail(\'' + p.id + '\')" onkeydown="if(event.key===\'Enter\'||event.key===\' \'){event.preventDefault();window.yarnGuideShowDetail(\'' + p.id + '\')}" class="group cursor-pointer bg-white p-6 rounded-[2.5rem] border border-stone-custom-200 shadow-sm hover:shadow-xl transition-all card-hover flex flex-col items-center text-center">' +
            '<div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-500">' + p.icon + '</div>' +
            '<h3 class="font-serif text-xl font-semibold text-stone-custom-900 mb-2">' + p.title + '</h3>' +
            '<span class="mt-auto text-[10px] font-bold uppercase tracking-widest text-stone-custom-500 border border-stone-custom-200 px-4 py-2 rounded-full group-hover:bg-teal-custom-900 group-hover:text-white transition-all">View Tips</span>' +
            '</div>';
        }).join('');
      }

      function showProjectDetail(projectId) {
        var data = ktcaData[currentContext].projects.find(function(p) { return p.id === projectId; });
        if (!data) return;
        var titleEl = document.getElementById('detail-title');
        var recEl = document.getElementById('detail-rec');
        var whyEl = document.getElementById('detail-why');
        var avoidEl = document.getElementById('detail-avoid');
        var detailEl = document.getElementById('project-detail');
        if (titleEl) titleEl.textContent = data.title;
        if (recEl) recEl.textContent = data.rec;
        if (whyEl) whyEl.textContent = data.why;
        if (avoidEl) avoidEl.textContent = data.avoid;
        if (detailEl) {
          detailEl.classList.remove('hidden');
          detailEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        if (typeof lucide !== 'undefined') lucide.createIcons();
      }

      function renderFiberTable(contextId, term) {
        term = term || '';
        var tbody = document.getElementById('fiber-table-body');
        if (!tbody) return;
        var contextData = ktcaData[contextId];
        var data = (contextData && contextData.fibers) ? contextData.fibers : [];
        var filtered = data.filter(function(f) { return f.name.toLowerCase().indexOf(term.toLowerCase()) !== -1; });
        if (filtered.length === 0) {
          tbody.innerHTML = '<tr><td colspan="4" class="px-6 py-8 text-center text-stone-custom-400 text-sm italic">No matching fibers found.</td></tr>';
          return;
        }
        tbody.innerHTML = filtered.map(function(f) {
          return '<tr class="hover:bg-white transition-colors group">' +
            '<td class="px-6 py-4 text-sm font-serif font-semibold text-stone-custom-900 group-hover:text-teal-custom-900">' + f.name + '</td>' +
            '<td class="px-6 py-4 text-sm text-stone-custom-600">' + f.hypo + '</td>' +
            '<td class="px-6 py-4 text-sm text-stone-custom-600">' + f.wash + '</td>' +
            '<td class="px-6 py-4 text-sm text-stone-custom-600 italic">' + f.best + '</td>' +
            '</tr>';
        }).join('');
      }

      function updateDashboard(contextId) {
        currentContext = contextId;
        var data = ktcaData[contextId];
        var mobileSelect = document.getElementById('mobile-context');
        if (mobileSelect) mobileSelect.value = contextId;

        var content = document.getElementById('dashboard-content');
        if (content) {
          content.classList.remove('fade-in');
          void content.offsetWidth;
          content.classList.add('fade-in');
        }

        var radarTitle = document.getElementById('radar-title');
        if (radarTitle) radarTitle.innerHTML = 'Fiber Matrix for <span class="italic text-teal-custom-900">' + data.title + '</span>';

        var priorityList = document.getElementById('priority-list');
        if (priorityList) {
          priorityList.innerHTML = data.priorities.map(function(p) {
            return '<li class="flex items-start"><i data-lucide="check" class="w-5 h-5 mr-3 text-teal-custom-100 flex-shrink-0"></i> <span class="font-sans text-sm">' + p + '</span></li>';
          }).join('');
        }

        var warningContent = document.getElementById('warning-content');
        if (warningContent) {
          warningContent.innerHTML = data.warnings.map(function(w) {
            return '<div class="flex gap-3 items-start"><i data-lucide="alert-circle" class="w-5 h-5 text-red-800 flex-shrink-0 mt-0.5"></i> <p>' + w + '</p></div>';
          }).join('');
        }

        if (typeof lucide !== 'undefined') lucide.createIcons();
        renderNav();
        updateChart(data.chartData);
        renderProjects(data.projects);
        renderFiberTable(contextId, document.getElementById('fiber-search') ? document.getElementById('fiber-search').value : '');
        var detailEl = document.getElementById('project-detail');
        if (detailEl) detailEl.classList.add('hidden');
      }

      function init() {
        renderNav();
        updateDashboard(currentContext);
        var mobileContext = document.getElementById('mobile-context');
        if (mobileContext) {
          mobileContext.addEventListener('change', function(e) { updateDashboard(e.target.value); });
        }
        var fiberSearch = document.getElementById('fiber-search');
        if (fiberSearch) {
          fiberSearch.addEventListener('input', function(e) { renderFiberTable(currentContext, e.target.value); });
        }
        var closeDetail = document.getElementById('close-detail');
        if (closeDetail) {
          closeDetail.addEventListener('click', function() {
            var el = document.getElementById('project-detail');
            if (el) el.classList.add('hidden');
          });
        }
      }

      window.yarnGuideUpdateDashboard = updateDashboard;
      window.yarnGuideShowDetail = showProjectDetail;

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    })();
  </script>
</Layout>
